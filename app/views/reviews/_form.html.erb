<%= simple_form_for @review do |f| %>
  <%= f.input :title %>
  <%= f.input :restaurant %>
  <%= f.input :address %>
  <%= f.input :photo %>
  <%= f.input :body %>
  <%= f.input :cuisine, collection: ["American", "Indian", "Mexican"], selected: "American" %>
  <%= f.input :price, collection: 1..3, selected: 1 %>
  <%= f.input :score, collection: 1..10, selected: 1 %>
  <%= f.input :ambiance %>

  <%= f.button :submit %>
<% end %>